<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <Button
        android:id="@+id/healthTestBackBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_back_key"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/healthTestMainTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="오늘의 운동측정"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toRightOf="@id/healthTestBackBtn"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/healthTestTitle1"
        android:layout_width="200dp"
        android:layout_height="100dp"

        android:text="윗몸일으키기"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"

        android:layout_marginLeft="50dp"
        android:layout_marginTop="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="20dp"
        />
    <EditText
        android:id="@+id/healthTestEditText1"
        android:layout_width="120dp"
        android:layout_height="100dp"

        android:text="20회"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"

        android:layout_marginTop="150dp"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />


    <TextView
        android:id="@+id/healthTestTitle2"
        android:layout_width="200dp"
        android:layout_height="100dp"

        android:text="팔굽혀펴기"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"

        android:layout_marginLeft= "50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf ="@+id/healthTestTitle1"
        android:elevation="20dp"
        />
    <EditText
        android:id="@+id/healthTestEditText2"
        android:layout_width="120dp"
        android:layout_height="100dp"

        android:text="5회"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"

        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/healthTestEditText1"
        />

    <TextView
        android:id="@+id/healthTestTitle3"
        android:layout_width="200dp"
        android:layout_height="100dp"

        android:text="스쿼트"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"

        android:layout_marginLeft= "50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf ="@+id/healthTestTitle2"
        android:elevation="20dp"
        />
    <EditText
        android:id="@+id/healthTestEditText3"
        android:layout_width="120dp"
        android:layout_height="100dp"

        android:text="8회"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"

        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/healthTestEditText2"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight= "50dp"

        android:text="측정끝내기"
        android:textSize="20sp"

        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/white_round_border"
        />

</androidx.constraintlayout.widget.ConstraintLayout>