<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/communityBackgroundColor">

    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/communityColor"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <androidx.cardview.widget.CardView
        android:id="@+id/post"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_back">


        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/im_sample_profile"
                        android:foreground="@drawable/fg_rounded">

                    </ImageView>

                    <TextView
                        android:id="@+id/tv_writer"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:ellipsize="end"
                        android:maxLength="15"
                        android:text="작성자"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="180dp"
                        android:layout_marginTop="15dp">

                    </TextView>

                </LinearLayout>


                />

                <TextView
                    android:id="@+id/tv_contents"
                    android:layout_width="362dp"
                    android:layout_height="113dp"
                    android:layout_margin="10dp"
                    android:text="내용"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_post_heart"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="공감"></TextView>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_comment"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="댓글"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="2"></TextView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="7dp"
                android:background="#999999" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <GridLayout
        android:id="@+id/ll_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        app:layout_constraintTop_toBottomOf="@+id/post"

        >


        <EditText
            android:id="@+id/et_comment"
            android:layout_column="0"
            android:layout_columnWeight="100"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:textSize="15dp"
            android:hint="댓글 입력">

        </EditText>

        <Button
            android:id="@+id/btn_pushComment"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="입력"
            android:backgroundTint="@color/communityColor"
            android:textStyle="bold"

            ></Button>

    </GridLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_comment"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:horizontalSpacing="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="0dp"
        android:verticalSpacing="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_comment"
        app:layout_constraintVertical_weight="9" />


</androidx.constraintlayout.widget.ConstraintLayout>